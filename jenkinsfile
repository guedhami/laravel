pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Checkout the GitHub repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Define the Docker build command
                    def dockerBuildCommand = [
                        
                        'docker',
                        'build',
                        '-t', 'test1-jenkins',
                        '.'
                    ]

                    // Execute the Docker build command
                    sh script: dockerBuildCommand.join(' '), returnStatus: true
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'hayder69', passwordVariable: 'dckr_pat_xcy1-5pFO101Xe91vHl8Xs1HGAo')]) {
                    script {
                        // Log in to Docker Hub
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"

                        // Push the Docker image
                        sh "docker push  hayder69/test:${latest}"
                    }
                }
            }
        }
    }
}

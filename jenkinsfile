pipeline {
    agent any 
    environment {
    DOCKERHUB_CREDENTIALS = credentials('docker-hub-hayder69')
    }

node {   
    stage('Clone repository') {
        git credentialsId: 'git', url: 'https://github.com/guedhami/laravel/'
    }
    
    stage('Build image') {
       dockerImage = docker.build("laravel-app")
    }
    
 stage('Push image') {
        withDockerRegistry([ credentialsId: "docker-hub-hayder69", url: "https://hub.docker.com/repository/docker/hayder69/test" ]) {
        dockerImage.push()
        }
    }    
}
}
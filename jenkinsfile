pipeline {
    agent any 
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-hayder69')
    }

    stages {
        stage('Clone repository') {
            steps {
                script {
                    // Checkout the Laravel repository
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[credentialsId: 'git', url: 'https://github.com/guedhami/laravel']]])
                }
            }
        }

        stage('Build image') {
            steps {
                script {
                    // Build the Docker image with Dockerfile in the project root
                    sh "docker build -t test-jenkins", "." 
                }
            }
        }

        stage('Push image') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-hayder69') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}

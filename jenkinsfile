pipeline {
    agent any 
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-hayder69')
    }

    stages {
        stage('Clone repository') {
            steps {
                script {
                    // Checkout the Laravel repository
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[credentialsId: 'git', url: 'https://github.com/guedhami/laravel']]])
                }
            }
        }

        stage('Build image') {
            steps {
               steps {
                script {
                    // Define the Docker build command and its arguments as a list
                    def dockerBuildCommand = [
                        'docker',
                        'build',
                        '-t', 'test-jenkins',  // Specify the image name and tag here
                        '.'
                    ]

                    // Execute the Docker build command
                    def buildResult = bat(script: dockerBuildCommand.join(' '), returnStatus: true)

                    if (buildResult == 0) {
                        echo 'Docker image built successfully.'
                    } else {
                        error 'Docker image build failed.'
                    }
                }
            
            }
        }

        stage('Push image') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-hayder69') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
